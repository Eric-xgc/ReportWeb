@using ReportWeb.Models.ALE
@{
    ViewBag.Title = "ALE Fatturazione";
    Layout = "~/Views/Shared/_LayoutApplication.cshtml";
}

<div class="content-top">
    <h2>Addebito Lavoranti Esterni - Fatturazione</h2>
</div>


<div class="content-scheda" style="overflow-y:auto; overflow-x:hidden; height:750px">
    <div class="box" id="sectionDatiGenerali">
        <div class="box-header with-border">
            <h4 class="box-title text-bold">Nuovi gruppi da fatturare</h4>
            <div class="box-tools pull-right">
                <button id="btnCollapseDatiGenerali" type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-chevron-up"></i></button>
            </div>
        </div>
        <!-- /.box-header -->
        <div class="box-body form-group-sm">
            <div id="divGruppiDaFatturare">
            </div>
            <label class="text-red input-sm" id="lblMessage"></label>
        </div>
    </div>
    <div class="box box-primary" id="sectionTaglio">
        <div class="box-header with-border">
            <h4 class="box-title text-bold">Gruppi fatturati</h4>
            <div class="box-tools pull-right">
                <button id="btnCollapseTaglio" type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-chevron-up"></i></button>
            </div>
        </div>
        <div class="box-body">
            <div id="divGruppiFatturati">

            </div>
        </div>
    </div>
</div>

<script language="javascript" type="text/javascript">
    $(function ()
    {
        CaricaGruppiDaFatturare();
        CaricaGruppiFatturati();
    });

    function CaricaGruppiDaFatturare()
    {

        var url = '@Url.Action("CaricaGruppiDaFatturare", "ALE")';
        $.ajax({
            url: url,
            data: { },
            cache: false,
            type: "POST",
            success: function (data)
            {
                $('#divGruppiDaFatturare').html(data).show();
            },
            error: function (response)
            {
                document.open();
                document.write(response.responseText);
                document.close();
            }
        });
    }

    function CaricaGruppiFatturati()
    {
        var url = '@Url.Action("CaricaGruppiFatturati", "ALE")';
        $.ajax({
            url: url,
            data: {},
            cache: false,
            type: "POST",
            success: function (data)
            {
                $('#divGruppiFatturati').html(data).show();
            },
            error: function (response)
            {
                document.open();
                document.write(response.responseText);
                document.close();
            }
        });
    }

</script>